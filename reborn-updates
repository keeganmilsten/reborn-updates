#!/bin/bash
# -*- coding: utf-8 -*-
#
miscellaneous() {
    yad --title "Various Improvements" --height=90 --center --text "Add Various Configurations" --text-align=center \
        --button="Remove Numix Themes":"xterm -e sudo pacman -Rdd numix-icon-theme-circle --noconfirm" \
        --button="Back":1
}
        
install() {
    while :; do
    yad --title "Install" --height=80 --center --text "Select Your Current Desktop Environment"  --text-align=center \
        --button="XFCE":2 \
        --button="Mate":3 \
        --button="LXQT":4 \
        --button="Enlightenment":5 \
        --button="i3":6 \
        --button="Budgie":7 \
        --button="Cinnamon":8 \
        --button="Back":1
    ret=$?

    case $ret in
        1) return ;;
        2) xfce ;;
        3) mate ;;
        4) lxqt ;;
        5) enlightenment ;;
        6) i3 ;;
        7) budgie ;;
        8) cinnamon ;;
    esac
done
}

xfce() {
    yad --title "Install" --skip-taskbar --center --width=320 --text "Install the Following:" \
        --button="Install New Login Theme":"xterm -e reborn-sddm.sh" \
        --button="Back":1
}

mate() {
    yad --title "Install" --skip-taskbar --center --width=320 --text "Install the Following:" \
        --button="Install New Login Theme":"xterm -e reborn-sddm.sh" \
        --button="Back":1
}

lxqt() {
    yad --title "Install" --skip-taskbar --center --width=320 --text "Install the Following:" \
        --button="Install New Login Theme":"xterm -e reborn-sddm.sh" \
        --button="Back":1
}

enlightenment() {
    yad --title "Install" --skip-taskbar --center --width=320 --text "Install the Following:" \
        --button="Install New Login Theme":"xterm -e reborn-sddm.sh" \
        --button="Back":1
}

i3() {
    yad --title "Install" --skip-taskbar --center --width=320 --text "Install the Following:" \
        --button="Install New Login Theme":"xterm -e reborn-sddm.sh" \
        --button="Back":1
}

budgie() {
    yad --title "Install" --skip-taskbar --center --width=320 --text "Install the Following:" \
        --button="Install New Login Theme":"xterm -e reborn-sddm.sh" \
        --button="Back":1
}

cinnamon() {
    yad --title "Install" --skip-taskbar --center --width=320 --text "Install the Following:" \
        --button="Install New Login Theme":"xterm -e reborn-sddm.sh" \
        --button="Back":1
}
while :; do
    action=$(yad --title "Reborn Improvements" --height=100 --width=300 --center --buttons-layout=center \
        --text="Made For You - Made By You" --text-align=center \
        --button="Miscellaneous":2 \
        --button="Close":1)

    ret=$?

    case $ret in
        1) exit 0 ;;
        2) miscellaneous ;;
    esac
done
